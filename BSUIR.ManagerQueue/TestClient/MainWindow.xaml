<Window x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClient"
        mc:Ignorable="d"
        Title="{x:Static local:Strings.MainWindowTitle}" Height="350" Width="525">
    <Grid>
        <StackPanel  Margin="10,10,10,10" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="passwordTextBox" Height="23" TextWrapping="Wrap" Width="120" Margin="0,10,0,0" HorizontalAlignment="Left"/>
            <Button x:Name="registerButton" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,10,0,0" Click="registerButton_Click"/>
            <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
